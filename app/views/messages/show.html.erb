<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<h1><%= @message.title %></h1>
				<h5>Posted by <%= @message.user.email %>, <%= time_ago_in_words(@message.created_at) %> ago</h5> <br />
				<h4><%= @message.description %></h4> <br />
			</div>
		</div>

		<div class="row">
			<div class="col-lg-12">
			<hr>
		<h3 class="comments">Comments</h3>
		<% if @message.comments == nil %>
			<p>No comments yet! Write one below.</p>
			
			<% else %>
			<h6><%= render @message.comments %></h6>
		<% end %>

		<h3>Reply to this message</h3>
		<%= render 'comments/form' %>

		<br />

		<%= link_to "Back", root_path %>

		<% if user_signed_in? %>
			<% if @message.user_id == current_user.id %>
				<%= link_to "Edit", edit_message_path(@message) %> â€¢ 
				<%= link_to "Delete this message", message_path(@message), method: :delete, data: {confirm: "Are you sure?"} %>
			<% end %>
		<% end %>
		</div>
		</div>

</div>